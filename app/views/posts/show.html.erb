<div>
  <div>
    <h1>
      Post #<%= @the_post.id %> details
    </h1>

    <div>
      <div>
        <a href="/posts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_post/<%= @the_post.id %>">
          Delete post
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_post.user_id %>
      </dd>

      <dt>
        Content
      </dt>
      <dd>
        <%= @the_post.content %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @the_post.title %>
      </dd>

      <dt>
        Tag
      </dt>
      <dd>
        <%= @the_post.tag %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_post.image %>
      </dd>

      <dt>
        Mood
      </dt>
      <dd>
        <%= @the_post.mood %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_post.comments_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_post.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_post.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit post
    </h2>

    <form action="/modify_post/<%= @the_post.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_post.user_id %>">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content"><%= @the_post.content %></textarea>
      </div>

      <div>
        <label for="title_box">
          Title
        </label>

        <textarea id="title_box" name="query_title"><%= @the_post.title %></textarea>
      </div>

      <div>
        <label for="tag_box">
          Tag
        </label>

        <input type="text" id="tag_box" name="query_tag" value="<%= @the_post.tag %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_post.image %>">
      </div>

      <div>
        <label for="mood_box">
          Mood
        </label>

        <input type="text" id="mood_box" name="query_mood" value="<%= @the_post.mood %>">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count" value="<%= @the_post.comments_count %>">
      </div>

      <button>
        Update post
      </button>
    </form>
  </div>
</div>

<hr>
